<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <object class="GtkHeaderBar" id="header_bar">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="title">OpenSQL Pro</property>
    <property name="show_close_button">True</property>
    <child>
      <object class="GtkMenuButton" id="btn_run">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">False</property>
        <property name="tooltip_text" translatable="yes">Run query</property>
        <child>
          <object class="GtkImage">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="icon_name">gtk-execute</property>
            <property name="icon_size">2</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkMenuButton" id="btn_new">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">False</property>
        <property name="tooltip_text" translatable="yes">New SQL file</property>
        <child>
          <object class="GtkImage">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="icon_name">gtk-new</property>
            <property name="icon_size">2</property>
          </object>
        </child>
      </object>
    </child>
  </object>

  <object class="GtkButtonBox" id="box_connect">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="orientation">vertical</property>
    <property name="spacing">5</property>
    <property name="homogeneous">True</property>
    <property name="layout_style">center</property>
    <child>
      <object class="GtkLabel">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="label" translatable="yes">Connections</property>
      </object>
    </child>
  </object>
  <object class="GtkButton" id="btn_add_connection">
    <property name="label" translatable="yes">Add Connection</property>
    <property name="visible">True</property>
    <property name="can_focus">True</property>
    <property name="receives_default">True</property>
    <signal name="clicked" handler="btn_add_connection" swapped="no"/>
  </object>

  <object class="GtkPaned" id="edit_pane">
    <property name="visible">True</property>
    <property name="can_focus">True</property>
    <property name="orientation">vertical</property>
    <!--<child>
      <object class="GtkSourceView" id="edit_query">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="wrap_mode">word-char</property>
        <property name="left_margin">2</property>
        <property name="right_margin">2</property>
        <property name="top_margin">2</property>
        <property name="bottom_margin">2</property>
        <property name="monospace">True</property>
        <property name="show_line_numbers">True</property>
        <property name="tab_width">4</property>
        <property name="show_right_margin">True</property>
        <property name="highlight_syntax">True</property>
        <property name="smart_home_end">always</property>
      </object>
      <packing>
        <property name="resize">False</property>
        <property name="shrink">True</property>
      </packing>
    </child>-->
  </object>
  <object class="GtkTreeView" id="edit_results">
    <property name="visible">True</property>
    <property name="can_focus">True</property>
    <child internal-child="selection">
      <object class="GtkTreeSelection"/>
    </child>
  </object>
</interface>
